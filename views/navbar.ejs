<html>
<head>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Bungee&family=Pacifico&display=swap');
  </style>
  <link rel="stylesheet" href="/styles/navbar.css">
</head>
<nav class="navbar">
  <div class="left">
    <span class="logo">Sell-ebration</span>
  </div>
  <div class="center">
    <form class="search-form" action="/search" method="GET">
      <input type="text" name="query" placeholder="Search...">
      <button type="submit">Search</button>
    </form>
  </div>
  <div class="right">
    <!-- Show the login and register links if the user is not logged in -->
    <% if (!userId) { %>
      <a href="/users/login" class="nav-button">Login</a>
      <a href="/users/register" class="nav-button">Register</a>
    <% } %>

    <!-- Show the user-specific links if the user is logged in -->
    <% if (userId) { %>
      <a href="/addItem" class="nav-button">Post Item</a>
      <a href="/users/logout" class="nav-button">Logout</a>
    <% } %>
  </div>
</nav>
</html>
